<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/margin_large">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/notification_toggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:cardElevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardBackgroundColor="@color/surface">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_medium">

            <TextView
                android:id="@+id/email"
                style="@style/TextAppearance.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/notification_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Notifications"
        style="@style/TextAppearance.Body"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_medium" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/seminar_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seminar"
        style="@style/TextAppearance.Body"
        app:layout_constraintTop_toBottomOf="@id/notification_toggle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_small" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/exam_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exam"
        style="@style/TextAppearance.Body"
        app:layout_constraintTop_toBottomOf="@id/seminar_check"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_small" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/fest_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fest"
        style="@style/TextAppearance.Body"
        app:layout_constraintTop_toBottomOf="@id/exam_check"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_small" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/notice_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notice"
        style="@style/TextAppearance.Body"
        app:layout_constraintTop_toBottomOf="@id/fest_check"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_small" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout_button"
        style="@style/ButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.45"
        app:backgroundTint="@color/primary"
        android:layout_marginTop="@dimen/margin_medium" />

</androidx.constraintlayout.widget.ConstraintLayout>